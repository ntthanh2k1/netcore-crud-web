@model IEnumerable<NetCore.Crud.Web.Dtos.AssignmentDtos.GetAllAssignmentsDto>

@{
    ViewData["Title"] = "Get All Assignments";
}

<h1>Get All Assignments</h1>

<p>
    <a asp-action="CreateAssignment" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Manipulate
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="GetAssignmentById" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                <a asp-action="UpdateAssignment" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="DeleteAssignment" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
